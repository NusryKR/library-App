<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="14dp"
        android:id="@+id/card_view_borrowedBook"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_100sdp"
                    android:text="Book ID :"
                    android:textSize="16dp">

                </TextView>
            <TextView
                android:id="@+id/borrow_bookId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:textColor="#2196f3"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_100sdp"
                    android:text="Book Name :"
                    android:textSize="16dp">

                </TextView>
            <TextView
                android:id="@+id/borrow_bookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_80sdp"
                android:textSize="16dp"
                android:textColor="#878586"/>
            </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_100sdp"
                        android:text="Return Date :"
                        android:textSize="16dp">

                    </TextView>

                    <TextView
                        android:id="@+id/borrow_dueDate"
                        android:layout_width="match_parent"
                        android:layout_below="@id/borrow_bookName"
                        android:layout_height="wrap_content"
                        android:textColor="#878586"
                        android:layout_marginLeft="@dimen/_80sdp"
                        android:textSize="16dp"
                        tools:ignore="NotSibling" />



                </RelativeLayout>

            </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>